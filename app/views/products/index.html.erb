<div class="container">
  <% @products.each do |product| %>
    <div class="card-product">
    <%= link_to store_product_path(id: product), :class => "photo_product" do %>
          <div class="toto">
            <div class="show_photo_store">
                <%= cl_image_tag(product.photos.first.key,
                                            :width => 250,
                                            :height => 200) if product.photos.present? %>
            </div>
            <div class="card-product-infos">
              <h2><%= product.name %></h2>
              <p><%= simple_format(product.desc) %></p>
            </div>
          </div>
          <div class="card-trip-pricing">
            <h2><%= product.price_cents %> â‚¬ </h2>
            
          </div>
    <% end %>
    </div>
  <% end %>
</div>
