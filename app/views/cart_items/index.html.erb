<div class="container">
  <% @items.each do  |store| %>
    <div class="cart-store">
      <div class="cart_titel">
        <h2><%= store_name(store) %></h2>
        <h6>Prix</h6>
      </div>
      <% store[1].each do  |product| %>
        <%= render "products", :product => fetch_product_obj(product), :store => store %>
      <% end %>
      <div class="cart_buy">
        <%= link_to 'buy', checkouts_path(store_id: store_id(store)), :id => "checkout-buy", :method => "POST",:class => "btn btn-link"%>
        <p>Sous-total:<%= total_items(store)%> â‚¬</p>
      </div>
    </div>
  <% end %>
</div>